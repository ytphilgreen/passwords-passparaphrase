<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>

<VBox xmlns:fx="http://javafx.com/fxml/1"
fx:controller= "edu.cnm.deepdive.security.ui.Controller"
	alignment= "top_center"
	spacing= "10">
	
	<padding>
	
	<Insets 
	  top="10"
	  right="0"
	  left="0"
	  bottom="10" />
	  
	</padding>
	
	
	<Text id="header" text="%header"/>
	
	<TabPane tabClosingPolicy="unavailable">

	<Tab text="%password.tab.name" >
				
	<VBox
	
	id="password-options"
	fx:id="passwordOptions"
	alignment="center_left"
	fillWidth="true"
	spacing="15">

	<padding>
	
		<Insets 
		 top="20"
		 right="20"
		 left="20"
		 bottom="20" />
		 
	</padding>
	
	<CheckBox 
	 fx:id="upperIncluded"
	 id="upper-included"
	 text="%include.upper.label"
	 onAction="#checkPasswordOptions"/>
	 
	<CheckBox
	 fx:id="lowerIncluded" 
	 id="lower-included"
	 text="%include.lower.label"
	 onAction=#checkPasswordOptions" />
	 
	<CheckBox
	 text="%include.punctuation.label" 
	 fx:id="punctuationIncluded" 
	 id="punctuationIncluded"
	 onAction="#checkPasswordOptions"/>
	 
	<CheckBox 
	text="%exclude.ambiguous.label" 
	fx:id="ambiguousExcluded" 
	id="ambiguousExcluded"
	onAction="#checkPasswordOptions"/>
	
	<CheckBox 
	text="digitsIncluded" 
	id="digits-included" 
	text="%include.digits.label" 
	onAction="#checkPasswordOption"/>
	
	<Label
	 fx:id="passwordLengthLabel"
	  id="password-length-label" 
	  text=%password.lenth.label" 
	  mnemonicParsing="true"/>
	  
	<Slider 
	fx:id="passwordLenth"
	id="password-length"
	min="8"
	max="24" 
	majorTickUnit="4" 
	minorTickCount="3" 
	blockIncrement="1" 
	showTickLabels="true" 
	showTickMarks="true" 
	snapToTicks="true"/>
	
	<HBox 
	    alignment="center"
	    spacing="10">
	<Button 
	    fx:id="generatePassword"
	    id="generate-password"
	    text="%generate.password.label"
	    onAction="#generatePassword" />
	    
	    <TextField 
	       fx:id="password"
	       id="password"
	       editable="false"
	       prefColumnCount="18" />
	       
	    
	    </HBox>

</VBox>

	</Tab>
	
	<Tab text="%passphrase.tab.name">
	
	
	<VBox
		id="passphrase-options"
		fx:id="passphraseOptions"
		alignment="center"
		spacing="10">
		
		
		  <padding>
		  
		  <Inserts
		       top="20"
		       right="20"
		       left="20"
		       bottom="20" />
		  
		           </padding>
		
		        </VBox>
	      </Tab>
	
	 </TabPane>
	
</VBox>

